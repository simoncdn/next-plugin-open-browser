{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "node",
		"lib": [
			"ES2020"
		],
		"declaration": true,
		"strict": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"node",
			"vitest/globals"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist",
		"tests"
	]
}
